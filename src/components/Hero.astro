<!-- Script para controlar la visibilidad del texto -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Función para mostrar/ocultar el texto de una tarjeta específica
    function toggleText(button: HTMLButtonElement) {
      const index = button.getAttribute("data-index");
      const textDiv = document.getElementById(`text-${index}`);
      const allCards = document.querySelectorAll('.card'); // Selecciona todas las tarjetas

      // Cerrar todos los textos antes de abrir el seleccionado
      allCards.forEach(function(card) {
        const cardText = card.querySelector('.mt-4');
        if (cardText) {
          cardText.classList.add('hidden'); // Cierra todos los textos
        }
      });

      // Alternar la clase 'hidden' para mostrar u ocultar el texto de la tarjeta seleccionada
      if (textDiv) {
        textDiv.classList.toggle('hidden');
      }

      // Cambiar el texto del botón dependiendo del estado
      const isHidden = textDiv && textDiv.classList.contains('hidden');
      button.textContent = isHidden ? 
        (index === "0" ? "Ver por qué" :
        (index === "1" ? "Ver consecuencias" :
        (index === "2" ? "Ver solución" : "Ver por qué"))) : 
        "Cerrar";
    }

    // Añadir event listeners a los botones para cada tarjeta
    const card1Button = document.querySelector('.card-1 button');
    if (card1Button) {
      card1Button.addEventListener('click', function(event) {
        const button = event.currentTarget as HTMLButtonElement; // Aseguramos el tipo
        toggleText(button); // Llamamos a la función con el botón
      });
    }

    const card2Button = document.querySelector('.card-2 button');
    if (card2Button) {
      card2Button.addEventListener('click', function(event) {
        const button = event.currentTarget as HTMLButtonElement; // Aseguramos el tipo
        toggleText(button); // Llamamos a la función con el botón
      });
    }

    const card3Button = document.querySelector('.card-3 button');
    if (card3Button) {
      card3Button.addEventListener('click', function(event) {
        const button = event.currentTarget as HTMLButtonElement; // Aseguramos el tipo
        toggleText(button); // Llamamos a la función con el botón
      });
    }
  });
</script>
